{% extends 'dachborde/index.html.twig' %}

{% block title %}Hello Home{% endblock %}

{% block body %}
<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <h1 class="page-header">
                    Offres <small> </small>
                </h1>
            </div>
        </div>
        <!-- /. ROW  --> 
        <div class="row">
            <div class="col-md-12">
                <!-- Advanced Tables -->
                <div class="panel panel-default">
                    <div class="panel-heading">
                        OFFRES RECHERCHE
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>titre</th>
                                        <th>description</th>
                                        <th>type</th>
                                        <th>titre de categorie</th>
                                        <th>nom Entreprise</th>
                                        <th>domaine Entreprise</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {%for of in Offres %}
                                    <tr class="gradeX">
                                        <td>{{of.titre}}</td>
                                        <td>{{of.description}}</td>
                                        <td>{{of.type}}</td>
                                        <td>{{of.categorie.titre}}</td>
                                        <td>{{of.responsable.nomEntreprise}}</td>
                                        <td>{{of.responsable.domaineEntreprise}}</td> 
                                    </tr>
                                    {%endfor%}
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
                <!--End Advanced Tables -->
            </div>
        </div>
    </div>
</div>
{% endblock %}