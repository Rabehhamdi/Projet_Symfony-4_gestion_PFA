{% extends 'base.html.twig' %}
    {% block body %}
 
<link rel="stylesheet" href="{{ asset('authentification/fonts/material-icon/css/material-design-iconic-font.min.css')}}">
<link rel="stylesheet" href="{{ asset('authentification/css/style.css')}}">
     
    
        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form rabeh">
                        <h2 class="form-title">Sign up</h2> 
                         
                        {{ form_start(form, {'class': 'register-form'}) }}
                        <div class="form-group">
                            <label for="name">{{ form.username.vars.label }} </label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                             {{ form_row(form.username   ) }} 
                        </div>

                        

                        <div class="form-group">
                            <label for="name"> </label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            {{ form_row(form.cin) }} 
                        </div>

                        <div class="form-group">
                            <label for="name"> </label> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            {{ form_row(form.nom) }} 
                        </div>
                        <div class="form-group">
                            <label for="name"></label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            {{ form_row(form.prenom) }} 
                        </div>
                        <div class="form-group">
                            <label for="name"> </label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            {{ form_row(form.date_Naissance) }} 
                        </div>

                    
                        <div class="form-group">
                            <label for="email"> </label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            {{ form_row(form.adresse_Email) }}
                        </div>

                        <div class="form-group">
                            <label for="pass"> </label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            {{ form_row(form.plainPassword.first) }}
                        </div>
                        <div class="form-group">
                            <label for="re-pass"> </label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            {{ form_row(form.plainPassword.second) }}
                        </div>

                        <div class="form-group">
                            <label for="re-pass"> </label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            {{ form_row(form.roles) }}
                        </div>

                        <div class="form-group form-button">
                            <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                        </div>
                            
                            
                        {{ form_end(form) }}


                    </div>
                    <div class="signup-image">
                        <figure><img src="{{ asset('authentification/images/signup-image.jpg')}}" alt="sing up image"></figure>
                        <a href="{{path('login')}}" class="signup-image-link">I am already member</a>
                         
                    </div>
                </div>
            </div>
        </section> 
        <script src="{{ asset('authentification/js/main.js')}}"></script>
{% endblock %}