{% extends 'dachborde/index.html.twig' %}

{% block title %}Hello Home{% endblock %}

{% block body %}
<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <h1 class="page-header">
                    Dashboard <small>Responsable </small>
                </h1>
            </div>
        </div>
        {% if(app.user.image != "")%}
        <img width="150" height="150" src="/images/{{app.user.image}}">
        {%endif%}
        <div class="row">
            <div class="col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Information Basic
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <form role="form" action="{{path('ModificationUserRESPONSABLE')}}">
                                    <div class="form-group">
                                        <label for="disabledSelect">username</label>
                                        <input class="form-control" id="disabledInput" type="text"
                                            placeholder="{{ app.user.username }}" disabled="">
                                    </div>
        
                                    <div class="form-group">
                                        <label>roles</label>
                                        <input class="form-control" placeholder="{{ app.user.roles[0] }}" disabled="">
                                    </div>
        
                                    <div class="form-group">
                                        <label>activer</label>
                                        {% if(app.user.activer == 1)    %}
                                        <input class="form-control" placeholder="Activer" disabled="">
                                        {%else%}
                                        <input class="form-control" placeholder="Nom Activer" disabled="">
                                        {%endif%}
                                    </div>
        
                                    <div class="form-group">
                                        <label>cin</label>
                                        <input class="form-control" name="cin" value="{{ app.user.cin }}">
                                    </div>
        
                                    <div class="form-group">
                                        <label>Nom</label>
                                        <input class="form-control" name="nom" value="{{ app.user.nom }}">
                                    </div>
        
                                    <div class="form-group">
                                        <label>prenom</label>
                                        <input class="form-control" name="prenom" value="{{ app.user.prenom }}">
                                    </div>
        
                                    <div class="form-group">
                                        <label>date_naissance</label>
                                        <input class="form-control" name="date_naissance"
                                            value={{ app.user.dateNaissance|date('Y-m-d') }}>
                                    </div>
        
                                    <div class="form-group">
                                        <label>adresse_email</label>
                                        <input class="form-control" name="adresse_email" value="{{ app.user.adresseEmail }}">
                                    </div>
        
        
                                    <button type="submit" class="btn btn-default">Modifier</button>
                                    <button type="reset" class="btn btn-default">Reset</button>
                                </form>
                            </div>
        
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>





            <div class="col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-heading"> 
                        plus détaillé
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <form role="form" action="{{path('AvancModificationUserRESPONSABLE')}}">
                                     
             
            
                                    <div class="form-group">
                                        <label>nom_entreprise</label>
                                        <input class="form-control" name="nom_Entreprise" value="{{ u.getNomEntreprise }}">
                                    </div>
            
                                    <div class="form-group">
                                        <label>domaine_entreprise</label>
                                        <input class="form-control" name="domaine_Entreprise" value="{{ u.getDomaineEntreprise}}">
                                    </div>
            
                                    <div class="form-group">
                                        <label>description_entreprise</label>
                                        <input class="form-control" name="description_Entreprise" value="{{ u.getDescriptionEntreprise }}">
                                    </div> 
            
            
                                    <button type="submit" class="btn btn-default">Modifier</button>
                                    <button type="reset" class="btn btn-default">Reset</button>
                                </form>
                            </div>
            
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>






        </div>


        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Ajoute offre
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <form role="form" action="{{path('AjouteOffre')}}">
                                    <div class="form-group">
                                        <label for="disabledSelect">titre</label>
                                        <input class="form-control" name="titre" id="disabledInput" type="text" placeholder="{{ app.user.username }}"  >
                                    </div>
                                    <div class="form-group">
                                        <label for="disabledSelect">description</label>
                                        <input class="form-control" name="description" id="disabledInput" type="text" placeholder="{{ app.user.username }}">
                                    </div>
                                    <div class="form-group">
                                        <label for="disabledSelect">type</label>
                                        <input class="form-control" name="type" id="disabledInput" type="text" placeholder="{{ app.user.username }}">
                                    </div> 
                                    <div class="form-group">
                                        <label for="disabledSelect">Categorie</label>
                                        <select id="disabledSelect" name="Categorie" class="form-control">
                                            {%for cat in Categories%}
                                            <option value="{{cat.id}}">{{cat.titre}}</option>
                                            {%endfor%}
                                        </select>
                                    </div>
                                    <button type="submit" class="btn btn-default">Ajouter</button>
                                    <button type="reset" class="btn btn-default">Reset</button> 
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


 
{% endblock %}